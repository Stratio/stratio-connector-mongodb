<Connector>
	<ConnectorName>MongoConnector</ConnectorName>
	<DataStoresName>
		<Datastore>Mongo</Datastore>
	</DataStoresName>
	<Version>0.1.0</Version>
	<RequiredProperties>
	
		</RequiredProperties>
	<OptionalProperties>
		<Property>
			<Name>seeds</Name>
		</Property>
		<Property>
			<Name>ports</Name>
		</Property>
		<Property>
			<Name>mongo.readPreference</Name>
			<Options>
				<Name>primary</Name>
				<Name>primarypreferred</Name>
				<Name>secondary</Name>
				<Name>secondarypreferred</Name>
				<Name>nearest</Name>
			</Options>
		</Property>
		<Property>
			<Name>mongo.writeConcern</Name>
			<Options>
				<Name>acknowledged</Name>
				<Name>unacknowledged</Name>
				<Name>replica_acknowledged</Name>
				<Name>journaled</Name>
			</Options>
		</Property>
		<Property>
			<Name>mongo.acceptableLatencyDifference</Name>
		</Property>
		<Property>
			<Name>mongo.maxConnectionsPerHost</Name>
		</Property>
		<Property>
			<Name>mongo.maxConnectionIdleTime</Name>
		</Property>
		<Property>
			<Name>mongo.connectTimeout</Name>
		</Property>
	</OptionalProperties>
	<CatalogProperties>
	</CatalogProperties>
	<TableProperties>
		<Property>
			<Name>enable_sharding</Name>
			<SelectorType>boolean</SelectorType>
		</Property>
		<Property>
			<Name>shard_key_index_type</Name>
			<SelectorType>string</SelectorType>
				<Options>
					<Name>asc</Name>
					<Name>hashed</Name>
				</Options>
		</Property>
		<Property>
			<Name>shard_key_fields</Name>
			<SelectorType>string</SelectorType><!--Selector alias equasl fields csv. hashed only 1 field-->
		</Property>
	</TableProperties>
	<IndexProperties>
		<Property>
			<Name>index_type</Name><!--Posibilidad de nuevo tipo de Ã­ndice o custom => tipo por string-->
			<SelectorType>string</SelectorType>
				<Options>
					<Name>compound</Name>
					<Name>hashed</Name>
					<Name>geo_sphere</Name>
					<Name>geo_flat</Name>
				</Options>
		</Property>
		<OptionalProperties>
			<Property>
				<Name>compound_fields</Name>
				<SelectorType>string</SelectorType>
			</Property>
			<Property>
				<Name>sparse</Name>
				<SelectorType>boolean</SelectorType>
			</Property>
			<Property>
				<Name>unique</Name>
				<SelectorType>boolean</SelectorType>
			</Property>
		</OptionalProperties>
		
	</IndexProperties>
	<SupportedOperations>
		<operation>DROP_CATALOG</operation>
		<operation>CREATE_TABLE</operation>
		<operation>DROP_TABLE</operation>
		<operation>INSERT</operation>
		<operation>PROJECT</operation>
		<operation>SELECT_OPERATOR</operation>
		<operation>SELECT_LIMIT</operation>
		<operation>FILTER_PK_EQ</operation>
		<operation>FILTER_PK_GT</operation>
		<operation>FILTER_PK_LT</operation>
		<operation>FILTER_PK_GET</operation>
		<operation>FILTER_PK_LET</operation>
		<operation>FILTER_PK_DISTINCT</operation>
		<operation>FILTER_NON_INDEXED_EQ</operation>
		<operation>FILTER_NON_INDEXED_GT</operation>
		<operation>FILTER_NON_INDEXED_LT</operation>
		<operation>FILTER_NON_INDEXED_GET</operation>
		<operation>FILTER_NON_INDEXED_LET</operation>
		<operation>FILTER_NON_INDEXED_DISTINCT</operation>
		<operation>FILTER_INDEXED_EQ</operation>
		<operation>FILTER_INDEXED_GT</operation>
		<operation>FILTER_INDEXED_LT</operation>
		<operation>FILTER_INDEXED_GET</operation>
		<operation>FILTER_INDEXED_LET</operation>
		<operation>FILTER_INDEXED_DISTINCT</operation>
	</SupportedOperations>
</Connector>
