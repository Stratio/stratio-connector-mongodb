<DataStore>
	<Name>Mongo</Name>
	<Version>2.4.9</Version>
	<RequiredProperties>
		<Property>
			<PropertyName>Hosts</PropertyName>
			<Description>The list of hosts ips . Example: [host1,host2,host3]</Description>
		</Property>
		<Property>
			<PropertyName>Port</PropertyName>
			<Description>The list of ports . Example: [port1,port2,port3]</Description>
		</Property>
	</RequiredProperties>
	<OptionalProperties>
		<Property>
			<Name>mongo.readPreference</Name>
			<Description>primary, primarypreferred(default), secondary, secondarypreferred or nearest</Description>
		</Property>
		<Property>
			<Name>mongo.writeConcern</Name>
			<Description>acknowledged(default), unacknowledged, replica_acknowledged or journaled</Description>
		</Property>
		<Property>
			<Name>mongo.acceptableLatencyDifference</Name>
		</Property>
		<Property>
			<Name>mongo.maxConnectionsPerHost</Name>
		</Property>
		<Property>
			<Name>mongo.maxConnectionIdleTime</Name>
		</Property>
		<Property>
			<Name>mongo.connectTimeout</Name>
		</Property>
	</OptionalProperties>
	<Behaviors>
		<Behavior>UPSERT_ON_INSERT</Behavior>
	</Behaviors>
</DataStore>



